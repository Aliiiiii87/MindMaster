<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- TV-Screen Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#5E35B1" /> <!-- Hintergrundfarbe (schwarz) -->
            <corners android:radius="8dp" /> <!-- Eckenradius für das TV-Display -->
        </shape>
    </item>
    <!-- TV Screen Border -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#333333" /> <!-- Farbe des Bildschirmrahmens (dunkelgrau) -->
            <corners android:radius="8dp" /> <!-- Eckenradius für den Rahmen -->
        </shape>
    </item>
</layer-list>
