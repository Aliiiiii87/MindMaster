<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/categoryCV"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/custom_backround"
    app:cardCornerRadius="5dp"
    app:circularflow_radiusInDP="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/categoryIV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:background="@drawable/picture_rechtangle"
            tools:srcCompat="@tools:sample/avatars" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/category2TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hier ist ein langer Text, der scrollbar ist. Hier ist ein langer Text, der scrollbar ist. Hier ist ein langer Text, der scrollbar ist. Hier ist ein langer Text, der scrollbar ist. Hier ist ein langer Text, der scrollbar ist. Hier ist ein langer Text, der scrollbar ist. Hier ist ein langer Text, der scrollbar ist."
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"/>
        </ScrollView>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

